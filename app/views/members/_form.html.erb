<%= form_with(model: member, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :member_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :boi %>
    <%= form.text_area :boi, id: :member_boi, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :gw2_account %>
    <%= form.text_field :gw2_account, id: :member_gw2_account, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :discord_account %>
    <%= form.text_field :discord_account, id: :member_discord_account, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', members_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
