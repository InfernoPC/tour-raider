<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Boi</th>
      <th>Gw2 account</th>
      <th>Discord account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.boi %></td>
        <td><%= member.gw2_account %></td>
        <td><%= member.discord_account %></td>
	<% if user_signed_in? %>
        	<td><%= link_to 'Show', member_path(member.name) %></td>
        	<td><%= link_to 'Edit', edit_member_path(member.name) %></td>
        	<td><%= link_to 'Destroy', member_path(member.name), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path if user_signed_in? %>
