<h1>Members</h1>

<%= link_to 'New Member', new_member_path, class: 'btn btn-primary' if user_signed_in? %>

<br>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Boi</th>
      <th>Gw2 account</th>
      <th>Discord account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= link_to member.name, member_path(member) %></td>
        <td><%= member.boi %></td>
        <td><%= member.gw2_account %></td>
        <td><%= member.discord_account %></td>
	<% if user_signed_in? %>
        	<td><%= link_to 'Edit', edit_member_path(member), class: 'btn btn-outline-warning' %></td>
        	<td><%= link_to 'Destroy', member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>


